model Main(simulator) = 
  initially
    x  =  10 & x'  =  10 &
    time  =  0 & time'  =  1 &
    heating  =  "on" & 
    period   =  "day" 
  always
  // clock
  time' = 1 &
  if time > 12 then
    period + == "day"
  noelse&
  if time > 24 then
    period + == "night" &
    time + == 0 
  noelse &
  // heater continuousï¿½
  if period == "day" && heating == "on" then
    x' = 10
  else
    x' = -5-x
   &
  // heater discrete
  if x < 19 && period == "day" then
    heating + == "on"
  noelse &
  if x > 23 then
    heating + == "off"
  noelse&
  simulator.endTime + == 48
 

