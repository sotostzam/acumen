/* in Test: after the first move, c1.x is no longer
            a child of c1 
*/

model Main(simu)
  = initially
    mode  =  "Init"
  always
  match mode with[
    "Init" ->
      simu.timeStep + == 1,
      simu.endTime + == 1,

      create Test("Init"),
      mode + == "Idle"
    |"Idle" ->
  
  ]

model Test(mode)
  = initially 
    c1  =  create A(),
    c2  =  create A()
  always

  match mode with[
    "Init" ->
      mode + == "Reparent"
    |"Reparent" ->
      move c1.x c2,
      mode + == "Done"
    |"Done" ->
      move c1.x c2
   ]

model A()
  = initially
    x  =  create B()
  always
 

model B() = initially
