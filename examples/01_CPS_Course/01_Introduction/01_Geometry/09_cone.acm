// Displaying a cone

model Main(simulator) = 
  initially
    _3D = ((Cone 
            center = (0,0,0)  // Center point 
            radius = 0.4      // radius
            length = 1.0      // length
            color  = magenta  // Color
            rotation=(pi/2,0,0))) // Orientation
  always


