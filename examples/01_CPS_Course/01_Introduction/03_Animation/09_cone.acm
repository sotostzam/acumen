
// Cone plays radar (spherical coordinates)

model Main(simulator) = 
initially
  t = 0 & t' = 3 &
  _3D  =  ()
always
  t' = 3 &
  _3D =
 (Cone 
    center=(0,0,0) // Center point
    radius=0.4     // radius
    length=1.0     // length
    color=(1,0,1)  // Color  
    rotation=(0,0,t))   // Orientation
  
 

